<%= render partial: "shared/searchbar" %>
<h1>News Article</h1>

<div class="container container-fluid wrap card">
  <h2><%= @article['title'] %></h2>
  <div class="d-flex justify-content-between">
    <h5 class="text-muted"><%= @article['author'] %></h5>
    <h5 class="text-muted"><%= @article['publishedAt'] %></h5>
  </div>
  <img src="<%= @article['urlToImage'] %>" alt="<%= @article['title'] %>" class="img-fluid details-img">
  <h3 class=""><%= @article['description'] %></h3>
  <p class="text-muted">
    <%= @article['content'] %><%= @article['content'] %><%= @article['content']
    %><%= @article['content'] %><%= @article['content'] %>
  </p>
  <a href="<%= @article['url'] %>">Article Source</a>

</div>