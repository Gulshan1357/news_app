<h1><%= @heading %></h1>
<%= render partial: "shared/searchbar" %>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Date</th>
    <th>Image</th>
    <th>Link</th>
  </tr>
  <% @news.each_with_index do |article, index| %>
  <tr>
    <td><%= article['title'] %></td>
    <td><%= article['description'] %></td>
    <td><%= article['author'] %></td>
    <td><%= article['publishedAt'] %></td>
    <td><img src="<%= article['urlToImage'] %>" alt="<%= article['title'] %>" /></td>
    <td>
      <a
        href="/news/details?search_term=<%= @search_value %>&article_num=<%= index %>"
        >Link</a
      >
    </td>
  </tr>
  <% end %>
</table>
